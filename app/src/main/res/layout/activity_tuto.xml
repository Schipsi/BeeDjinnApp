<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main2_activityvue6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="google.com.beedjinn.Partenariats"
    android:background="@drawable/fondrep">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Tutoriel"
                android:textSize="40dp"
                android:textColor="#f4b32d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textTuto"
                android:gravity="center" />


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/ennemis"
                android:id="@+id/imageView7"
                android:layout_below="@+id/imageView6"
                android:layout_alignLeft="@+id/textT1"
                android:layout_alignStart="@+id/textT1"
                android:layout_marginTop="50dp" />

            <TextView
                android:text="Vous incarnez le directeur d'une grande école d'ingénieur francaise (la meilleure après l'X). Cette année, certains auraient consommé de l'alcool au WEI."
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#f4b32d"
                android:id="@+id/textT1"

                android:textAlignment="center"

                android:layout_marginLeft="38dp"
                android:layout_marginStart="38dp"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/textTuto"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="De nombreux journalistes vous assaillent de questions, vous devez les éviter.Pour cela vous pouvez les esquiver en balayant l'écran vers le haut ou vers le bas. Vous pouvez aussi sauter en tapant sur l'écran, mais attention certains une perche son et peuvent vous atteindre même en l'air."
                android:layout_width="300dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:textColor="#f4b32d"
                android:id="@+id/textT2"

                android:textAlignment="center"
                android:layout_marginLeft="50dp"

                android:layout_alignTop="@+id/imageView7"
                android:layout_toRightOf="@+id/imageView7"
                android:layout_toEndOf="@+id/imageView7"
                android:layout_marginTop="27dp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/head_rev"
                android:id="@+id/imageView6"
                android:maxWidth="30dp"
                android:maxHeight="30dp"


                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@+id/textTuto"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="28dp" />

            <TextView
                android:text="Attention, ces journalistes sont fourbes, ils essayent de vous faire boire pour arriver à vous interviewer. Evitez donc les bouteilles qu'ils laissent sur votre chemin pour ne pas perdre le controle de vos actes."
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#f4b32d"
                android:id="@+id/textT3"

                android:textAlignment="center"


                android:layout_marginTop="75dp"
                android:layout_below="@+id/textT2"
                android:layout_marginBottom="70dp"
                android:layout_alignLeft="@+id/imageView7"
                android:layout_alignStart="@+id/imageView7" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/vodka"
                android:id="@+id/imageView8"
                android:layout_alignTop="@+id/textT3"
                android:layout_toRightOf="@+id/textT3"
                android:layout_toEndOf="@+id/textT3"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp" />

            <TextView
                android:text="Toute ressemblance avec des personnes existantes ou des faits réels serait fortuite."
                android:layout_width="wrap_content"
                android:textColor="#f4b32d"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/textT4"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="80dp" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>