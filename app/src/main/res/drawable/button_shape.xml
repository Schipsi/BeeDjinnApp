<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape android:shape="rectangle" >
        <corners
            android:radius="1dp"
            />
        <solid
            android:color="#1A1223"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="270dp"
            android:height="60dp"
            />
        <stroke
            android:width="0.5dp"
            android:color="#F4B32D"
            />
    </shape>
</item>

<item>
    <shape android:shape="rectangle" >
        <corners
            android:radius="1dp"
            />
        <solid
            android:color="#261A33"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="270dp"
            android:height="60dp"
            />
        <stroke
            android:width="0.5dp"
            android:color="#F4B32D"
            />
    </shape>
</item>
</selector>